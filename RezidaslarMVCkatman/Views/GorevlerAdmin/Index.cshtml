@model IEnumerable<RezidaslarMVCkatman.Models.mvcGorevlerModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("YENİ", "EY")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GorevAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GorevSuresi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.aciklama)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GorevAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GorevSuresi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.aciklama)
        </td>
        <td>
            @Html.ActionLink("DÜZENLE", "EY", new {  id=item.GorevNo }) |
            
            @Html.ActionLink("SİL", "Delete", new { id=item.GorevSuresi })
        </td>
